    "lifestyle",
    "productivity"
  ],
  "screenshots": [
    {
      "src": "screenshot-wide.png",
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "label": "Recipe search and discovery"
    },
    {
      "src": "screenshot-narrow.png",
      "type": "image/png",
      "sizes": "750x1334",
      "form_factor": "narrow",
      "label": "Mobile recipe browsing"
    }
  ],
  "shortcuts": [
    {
      "name": "Search Recipes",
      "short_name": "Search",
      "description": "Search for recipes",
      "url": "/search",
      "icons": [
        {
          "src": "shortcut-search.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Meal Planner",
      "short_name": "Plan",
      "description": "Plan your meals",
      "url": "/meal-planner",
      "icons": [
        {
          "src": "shortcut-plan.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Nutrition Tracker",
      "short_name": "Track",
      "description": "Track your nutrition",
      "url": "/nutrition",
      "icons": [
        {
          "src": "shortcut-nutrition.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Favorites",
      "short_name": "Favorites",
      "description": "View favorite recipes",
      "url": "/favorites",
      "icons": [
        {
          "src": "shortcut-favorites.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+recipe",
      "url": "/recipe?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/json"]
        }
      ]
    }
  }
}