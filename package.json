{
  "name": "smart-recipe-tracker",
  "version": "1.0.0",
  "description": "A modern, AI-powered web application for discovering recipes, tracking nutrition, planning meals, and managing your culinary journey.",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server -p 8080 -c-1",
    "start": "npm run serve",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "setup": "node scripts/setup.js"
  },
  "keywords": [
    "recipe",
    "nutrition",
    "food",
    "meal-planning",
    "health",
    "cooking",
    "firebase",
    "spoonacular",
    "web-app"
  ],
  "author": "Smart Recipe Tracker Team",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/smart-recipe-tracker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/smart-recipe-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/smart-recipe-tracker/issues"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "files": [
    "index.html",
    "login.html",
    "css/",
    "js/",
    "config.example.js",
    ".env.example",
    "README.md"
  ],
  "directories": {
    "doc": "docs"
  },
  "config": {
    "port": 8080
  }
}